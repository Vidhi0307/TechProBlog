<div class="flex flex-col w-full">

  {{#each blogsInfo as |blogs|}}
  <a href="/blogs/{{blogs.id}}">


    <div class="p-6 m-4 w-auto rounded-lg shadow-lg bg-white border-4 border-gray-500">

      <div class="flex flex-row justify-space-between border-4 border-black-200  bg-gray-200"><span
          class="font-bold text-2xl">{{blogs.post_name}}</span>
        <span class="text-sm">Posted by {{blogs.user.name}} on {{format_date blogs.date_created}}</span>
      </div>

      <div
        class=" py-3 mb-2 text-l font-bold tracking-tight block uppercase tracking-wide mb-6 text-gray-500 md:text-lg">
        {{blogs.post_desc}}
      </div>

    </div>
  </a>
  {{/each}}
</div>