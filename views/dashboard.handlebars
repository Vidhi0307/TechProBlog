<div class="flex flex-col  w-full">
  {{#each myblogsInfo as |userblogs|}}
  <a href="myblogs/{{userblogs.id}}">
    <div class="flex flex-col m-4 border-4 border-black-200 ">

      <div class="text-2xl p-3 bg-gray-200">
        {{userblogs.post_name}}
        <p class="mb-3  text-sm font-normal text-gray-700">{{format_date userblogs.date_created}}</p>
      </div>
    </div>
  </a>
  {{/each}}
  <div class=" flex flex-col items-center  ">
    <button class="btn btn-primary text-l" onclick=" window.location.href='/postblog'">
      New post
    </button>
  </div>
</div>